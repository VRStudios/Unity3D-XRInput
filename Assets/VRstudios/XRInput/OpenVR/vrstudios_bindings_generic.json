{
   "bindings" : {
      "/actions/vrstudios" : {
         "poses" : [
            {
               "output" : "/actions/vrstudios/in/hand_left",
               "path" : "/user/hand/left/pose/raw"
            },
            {
               "output" : "/actions/vrstudios/in/hand_right",
               "path" : "/user/hand/right/pose/raw"
            }
         ],
         "haptics" : [
            {
               "output" : "/actions/vrstudios/out/haptic_right",
               "path" : "/user/hand/right/output/haptic"
            },
            {
               "output" : "/actions/vrstudios/out/haptic_left",
               "path" : "/user/hand/left/output/haptic"
            }
         ],
        "sources": [
          // trigger button
          {
            "inputs": {
              "click": {
                "output": "/actions/vrstudios/in/triggerbutton"
              }
            },
            "mode": "trigger",
            "path": "/user/hand/right/input/trigger"
          },
          {
            "inputs": {
              "click": {
                "output": "/actions/vrstudios/in/triggerbutton"
              }
            },
            "mode": "trigger",
            "path": "/user/hand/left/input/trigger"
          },

          // menu
          {
            "inputs": {
              "click": {
                "output": "/actions/vrstudios/in/menubutton"
              }
            },
            "mode": "button",
            "path": "/user/hand/left/input/application_menu"
          },
          {
            "inputs": {
              "click": {
                "output": "/actions/vrstudios/in/menubutton"
              }
            },
            "mode": "button",
            "path": "/user/hand/right/input/application_menu"
          },

          // grip
          {
            "inputs": {
              "click": {
                "output": "/actions/vrstudios/in/gripbutton"
              }
            },
            "mode": "button",
            "path": "/user/hand/right/input/grip"
          },
          {
            "inputs": {
              "click": {
                "output": "/actions/vrstudios/in/gripbutton"
              }
            },
            "mode": "button",
            "path": "/user/hand/left/input/grip"
          },

          // trigger
          {
            "inputs": {
              "pull": {
                "output": "/actions/vrstudios/in/trigger"
              }
            },
            "mode": "trigger",
            "path": "/user/hand/right/input/trigger"
          },
          {
            "inputs": {
              "pull": {
                "output": "/actions/vrstudios/in/trigger"
              }
            },
            "mode": "trigger",
            "path": "/user/hand/left/input/trigger"
          },

          // touchpad 1
          {
            "inputs": {
              "position": {
                "output": "/actions/vrstudios/in/touchpad1"
              }
            },
            "mode": "trackpad",
            "path": "/user/hand/right/input/trackpad"
          },
          {
            "inputs": {
              "position": {
                "output": "/actions/vrstudios/in/touchpad1"
              }
            },
            "mode": "trackpad",
            "path": "/user/hand/left/input/trackpad"
          }
        ]
      }
   },
   "controller_type" : "generic",
   "description" : "VRstudios bindings for OpenVR generic controllers",
   "name" : "VRstudios bindings for generic controllers"
}
